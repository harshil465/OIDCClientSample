<Window x:Class="OidcClientSample.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="OAuth Authentication with IdentityModel.OidcClient" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Provider Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
            <Label Content="Provider:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox x:Name="ProviderComboBox" Width="150" Margin="5,0" VerticalAlignment="Center">
                <ComboBoxItem Content="Okta" IsSelected="True"/>
                <ComboBoxItem Content="Auth0"/>
                <ComboBoxItem Content="Entra ID"/>
            </ComboBox>
            <Label Content="Flow:" VerticalAlignment="Center" FontWeight="Bold" Margin="20,0,5,0"/>
            <ComboBox x:Name="FlowComboBox" Width="180" Margin="5,0" VerticalAlignment="Center">
                <ComboBoxItem Content="Authorization Code (Interactive)" IsSelected="True"/>
                <ComboBoxItem Content="Client Credentials (Service)"/>
                <ComboBoxItem Content="OIDC then SAML (Hybrid)"/>
            </ComboBox>
            <Button x:Name="LoginButton" Content="Login" Width="80" Margin="10,0" Click="LoginButton_Click"/>
            <Button x:Name="LogoutButton" Content="Logout" Width="80" Margin="10,0" Click="LogoutButton_Click" IsEnabled="False"/>
            <Button x:Name="RefreshTokenButton" Content="Refresh Token" Width="120" Margin="10,0" Click="RefreshTokenButton_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="1" Margin="10,5" FontWeight="Bold" Foreground="Blue"/>

        <!-- WebView2 -->
        <Border Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <wv2:WebView2 x:Name="WebView" Visibility="Collapsed"/>
        </Border>

        <!-- Token Display -->
        <ScrollViewer Grid.Row="3" MaxHeight="200" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="TokenTextBox" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"/>
        </ScrollViewer>
    </Grid>
</Window>